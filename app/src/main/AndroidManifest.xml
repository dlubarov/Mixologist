<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.lubarov.daniel.mixologist">
    <application
            android:allowBackup="true"
            android:icon="@drawable/launcher_icon"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light">
        <activity android:name="com.lubarov.daniel.mixologist.activity.TheActivity" android:label="Mixologist">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable" />
        </activity>

        <provider
                android:authorities="com.lubarov.daniel.mixologist.RecipeContentProvider"
                android:name="com.lubarov.daniel.mixologist.RecipeContentProvider"
                android:syncable="false"
                android:exported="false" />
    </application>
</manifest>
